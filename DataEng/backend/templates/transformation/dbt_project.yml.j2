name: '{{ project_name }}_dbt'
version: '1.0.0'
config-version: 2

profile: '{{ project_name }}'

model-paths: ["models"]
analysis-paths: ["analyses"]
test-paths: ["tests"]
seed-paths: ["seeds"]
macro-paths: ["macros"]
snapshot-paths: ["snapshots"]

target-path: "target"
clean-targets:
  - "target"
  - "dbt_packages"
  - "logs"

# Quoting configuration
quoting:
  database: false
  schema: false
  identifier: false

models:
  {{ project_name }}_dbt:
    # Base configuration for all models
    +materialized: view
    +enabled: true
    
    # Environment-specific configurations
    +tags: ["{{'{{'}} var('env', 'dev') {{'}}'}}"]
    
    # Staging Layer: Raw data transformation
    staging:
      +schema: "{{'{{'}} target.name {{'}}'}}_staging"
      +materialized: view
      +tags: ["staging"]
      
    # Intermediate Layer: Business logic building blocks
    intermediate:
      +schema: "{{'{{'}} target.name {{'}}'}}_intermediate"
      +materialized: "{{'{{'}} 'table' if target.name == 'prod' else 'view' {{'}}'}}"
      +tags: ["intermediate"]
    
    # Marts Layer: Final analytics-ready tables
    marts:
      +schema: "{{'{{'}} target.name {{'}}'}}_marts"
      +materialized: table
      +tags: ["marts"]
      
      # Production-only optimizations
      +persist_docs:
        relation: true
        columns: true

# Global variables
vars:
  # Environment (dev/staging/prod)
  env: "{{'{{'}} env_var('DBT_TARGET', 'dev') {{'}}'}}"
  
  # Date range for incremental models
  start_date: '2023-01-01'
  lookback_days: 30
  
  # Feature flags
  enable_staging_tests: true
  enable_snapshots: "{{'{{'}} true if target.name == 'prod' else false {{'}}'}}"

# Snapshot configuration
snapshots:
  {{ project_name }}_dbt:
    +target_schema: "{{'{{'}} target.name {{'}}'}}_snapshots"
    +unique_key: id
    +strategy: timestamp
    +updated_at: updated_at

# Seeds configuration
seeds:
  {{ project_name }}_dbt:
    +schema: seeds
    +quote_columns: false

